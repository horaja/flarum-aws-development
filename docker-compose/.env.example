# Flarum Database Configuration
FLARUM_DB_CONNECTION=mysql
FLARUM_DB_HOST=flarum_db_local # Service name from docker-compose
FLARUM_DB_PORT=3306
FLARUM_DB_DATABASE=flarum_dev_db
FLARUM_DB_USERNAME=flarum_dev_user
FLARUM_DB_PASSWORD=changeme_local_password 
FLARUM_DB_PREFIX=
MYSQL_ROOT_PASSWORD=changeme_local_root_password

# Flarum Base URL
FLARUM_URL=http://localhost:8080 # Port Nginx will be exposed on

# AI Backend URL (for Flarum extensions to call)
AI_BACKEND_URL_INTERNAL=http://ai_backend:5000 # For container-to-container comms
AI_BACKEND_URL_EXTERNAL=http://localhost:5001 # For accessing from host if needed

# General
APP_ENV=local
APP_DEBUG=true